<page-meta page-style="background: #f5f5f5; overflow: hidden;">
  <navigation-bar
    title="调试入口"
    back
    color="black"
    background="#fff"
    styleType="dark"
  ></navigation-bar>

  <view class="debug-page">
    <view class="debug-block">
      <view class="debug-item">
        <view class="text-group">
          <text class="title">打开内测模式</text>
          <text class="hint">开启后可以访问尚未开放的调试内容</text>
        </view>
        <switch
          class="debug-switch"
          checked="{{betaModeEnabled}}"
          bindchange="handleBetaSwitchChange"
        ></switch>
      </view>
    </view>

    <view class="debug-block">
      <view class="debug-item">
        <view class="text-group">
          <text class="title">清空本地缓存</text>
          <text class="hint">清理 localStorage 中的所有数据</text>
        </view>
        <button class="action-btn" size="mini" bindtap="handleClearStorage">清空</button>
      </view>
    </view>
  </view>
</page-meta>
