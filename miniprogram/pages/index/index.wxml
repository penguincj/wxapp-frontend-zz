<!-- index.wxml -->
<page-meta page-style="overflow: hidden;">
<navigation-bar title="格物观展" back="{{false}}" color="black" background="#FFF" style="text-align: center;"></navigation-bar>
<view>
  <!-- <view class="page-section page-section-spacing swiper" style="height: {{windowHeight - topBarHeight-2}}px;"> -->
  <view class="page-section page-section-spacing swiper full-height">
    <view class="icon-group">
      <view class="icon-group-item">
        <image src="data:image/png;base64,"
          alt="top-menu"
          class="icon-group-item-img"
          bindtap="goToCityList"
          mode="aspectFill" />
      </view>
    </view>
    <swiper indicator-dots autoplay="{{false}}" interval="{{false}}" duration="{{500}}" style="height: 100%;">
      <block wx:for="{{backgrounds}}">
        <swiper-item>
          <view class="swiper-item swiper-item-{{item.cityid}}">
            <image class="swiper-item-img" src="{{item.img}}" mode="aspectFill" />
            <view class="swiper-item-bg"></view>
            <view class="swiper-item-text">
              <text class="swiper-item-text-text">{{item.cityname}}</text>
              <text class="swiper-item-text-text-2">{{item.citypinyin}}</text>
            </view>
            <view class="swiper-item-museum">
              <block wx:for="{{item.museumList}}" wx:key="museumid">
                <view class="swiper-item-museum-item">
                  <!-- <image class="swiper-item-museum-item-img" src="{{item.img}}" mode="aspectFill" /> -->
                  <text class="swiper-item-museum-item-text">{{item.name}}</text>
                </view>
              </block>
              <view class="swiper-item-museum-more">
                <text class="swiper-item-museum-more-text" bindtap="goToMuseumList">更多博物馆</text>
              </view>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
</view>
</page-meta>