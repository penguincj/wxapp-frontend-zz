<page-meta page-style="overflow: hidden;">
<navigation-bar homeButton="{{true}}" title="格物观展" color="black" background="#FFF" style="text-align: center;"></navigation-bar>
<view>
  <block wx:for="{{museumList}}" wx:key="cityid">
    <view class="city-item" style="background: url({{item.img}}) no-repeat center center / cover">
      <!-- <image class="city-item-img" src="{{item.img}}" mode="aspectFill" /> -->
      <view class="city-item-mask"></view>
      <text class="city-item-name">{{item.cityname}}</text>
      <view class="city-name-pinyin">{{item.citypinyin}}</view>
      <view class="city-museum">
        <image src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABoAAAAaCAYAAACpSkzOAAAACXBIWXMAAAsTAAALEwEAmpwYAAAAeklEQVR4nO3VMQqAMAxA0RzM0RPr6FqoeqkvLoKFqmnTLPavoTwbhIooAgZgAQIwas5qgbRgAj4ANqACKAMrgG+gIZAHgZn2TSfkkgCbgxPFPXJXNppfZVYYrea33r6mdn7VIUnqqyteDf/965oG7LRvdX2P8IJcHr4DY+hS2pbIobEAAAAASUVORK5CYII="
          alt="museum"
          class="city-museum-icon"
        />
        <text class="city-museum-text">{{item.museumList.length}}个博物馆</text>
        
      </view>
      <image src="data:image/png;base64,"
          alt="museum"
          class="city-museum-arrow"
        />
    </view>
  </block>
</view>
</page-meta>  