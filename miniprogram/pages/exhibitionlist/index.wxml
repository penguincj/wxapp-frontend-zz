<!-- index.wxml -->
<page-meta page-style="overflow: hidden;">
<navigation-bar title="格物观展" loading="{{loading}}" color="black" background="#FFF" style="text-align: center;"></navigation-bar>
<view>
  <view>
    <exhibition-list
      id="exhibition_list"
      list="{{exhibitionList}}"
      playingindex="{{playingIndex}}"
      bind:changeAudioState="handleChangeAudioState"
    ></exhibition-list>
  </view>
  <view>
<canvas id="myCanvas" type="2d" style="border: 1px solid; width: 300px; height: 150px;" />
  </view>
  <view>
    <audio-player
      id="audio"
      videotitle="gewuguanzhan"
      audiourl="http://gewugo.com/storage/file/CB26976399343756.mp3"
      coverurl="http://gewugo.com/storage/image/NC06525637302482.jpg"
      sliderIndex="{{sliderIndex}}"
      duration="{{duration}}"
      currentTimeText="{{currentTimeText}}"
      totalTimeText="{{totalTimeText}}"
      bind:audioCanPlay="handleAudioCanPlay"
      bind:audioEnd="handleAudioEnd"
      bind:audioPlay="handleAudioPlay"
      bind:change="handleAudioChange"
      bind:audioPause="handleAudioPause"
      bind:audioError="handleAudioError"
      bind:audioNext="handleAudioNext"
      bind:audioPre="handleAudioPre"
      bind:audioCollec="handleAudioCollec"
      bind:audioShare="handleAudioShare"
    ></audio-player>
  </view>

<view class="cache-area" >
  <cache-audio></cache-audio>

</view>
</view>
</page-meta>  