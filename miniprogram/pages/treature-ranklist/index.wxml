<navigation-bar title="文物排行" back="{{true}}" extClass="transparent" styleType="dark" color="black" background="transparent"></navigation-bar>

<page-meta page-style="overflow: hidden;">
  <scroll-view
    class="page-scroll"
    scroll-y="{{true}}"
    show-scrollbar="{{false}}"
    enhanced="{{true}}"
  >
    <view class="page-treature-ranklist">
      <view class="hero" style="background-image: url('/static/images/ranklist-bg.jpg')">
        <view class="hero-scroll-wrap">
          <scroll-view
            class="hero-scroll"
            scroll-x="{{true}}"
            show-scrollbar="{{false}}"
            enhanced="{{true}}"
            scroll-left="{{heroScrollLeft}}"
            scroll-with-animation="{{false}}"
          >
            <view class="hero-track">
              <block wx:for="{{topRowsLoop}}" wx:key="index">
                <view class="thumb-row">
                  <block wx:for="{{item}}" wx:for-item="thumb" wx:for-index="thumbIndex" wx:key="thumbIndex">
                    <view class="thumb">
                      <image class="thumb-img" src="{{thumb}}" mode="aspectFill" />
                    </view>
                  </block>
                </view>
              </block>
            </view>
          </scroll-view>
          <view
            class="hero-scroll-mask"
            catchtouchstart="onHeroTouchMove"
            catchtouchmove="onHeroTouchMove"
            catchtouchend="onHeroTouchMove"
          ></view>
        </view>
      </view>

      <view class="rank-list">
        <block wx:for="{{rankList}}" wx:key="id">
          <view class="rank-item">
            <image class="rank-image" src="{{item.image}}" mode="aspectFill" />
            <view class="rank-info">
              <view class="rank-title">{{index + 1}}.{{item.name}}</view>
              <view class="rank-subtitle">{{item.location}}</view>
            </view>
            <view class="rank-btn" data-idx="{{item.id}}" bindtap="onClickShowDetail">查看</view>
          </view>
        </block>
      </view>
    </view>
  </scroll-view>
</page-meta>
