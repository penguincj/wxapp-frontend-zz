          showType="jiangjiedaoyu"
          audiolist="{{d_audiolist}}"
          list="{{exhibitList}}"
          playingExhibitId="{{exhibitId}}"
          playingIndex="{{playingIndex}}"
          bindGetCurPlayingStatus="handleGetCurPlayingStatus"
          bindChangeItem="handleClickExhibitItem"
          ></swiper-card6>
      </view>
      </dialog-half>
    </view>

