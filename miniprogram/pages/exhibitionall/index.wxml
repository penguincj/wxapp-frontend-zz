<!-- index.wxml -->
<page-meta page-style="">
	<navigation-bar
	 title="博物岛屿"
	 loading="{{false}}"
	 color="black"
	 background="#FFF"
	 styleType="dark"
	 style="text-align: center;"
	/>
	<view class="player-area">
	<player-comp
		bindClickPlayerComp="handleClickPlayerComp"
	></player-comp>
	</view>
	<scroll-view scroll-y="true" show-scrollbar="{{false}}" enhanced="{{true}}" style="height: 100vh">

		<view class="page-exhibition-all">
			<block wx:for="{{exhibitions}}" wx:key="{{item.id}}">
				<view class="exhibition-item" data-idx="{{item.id}}" bindtap="handleClickItem">
					<image src="{{item.image_url}}" class="item-img" mode="aspectFill" />
					<view class="item-desc-group">
						<view class="line-one">
							<span class="desc-title">{{item.name}}</span>
						</view>
						<view class="desc-desc">{{item.opendate}}</view>
					</view>
				</view>
			</block>
		</view>
	</scroll-view>
</page-meta>

