<!-- index.wxml -->
<page-meta page-style="overflow: hidden;">
<navigation-bar title="收藏" styleType="dark" loading="{{false}}" color="black" background="#FFF" style="text-align: center;"></navigation-bar>
<view class="player-area">
<player-comp
  bindClickPlayerComp="handleClickPlayerComp"
></player-comp>
</view>
<view class="collection-list-page">
  <scroll-card 
    wx:if="{{!error && collectionList.length}}" 
    cardStyle="{{styleHeight}}" 
    list="{{collectionList}}" 
    bindDeleteItem="handleDeleteItem" 
    bindClickItem="handleClickItem">
  </scroll-card>
  <view wx:if="{{!error && collectionList.length === 0}}" class="empty-content">
    <image src="/static/images/kong.png" class="empty-img" mode="aspectFill" />
    <view class="empty-text">暂无内容</view>
  </view>
  <view wx:if="{{error}}" class="empty-content">
    <image src="/static/images/wangluoshibai.png" class="empty-img" mode="aspectFill" />
    <view class="empty-text">网络丢失,请检查网络</view>
    <view class="empty-btn" bindtap="handleClickInit">重试</view>
  </view>
</view>
  
</page-meta>  