<view class="scroll-card">
	<view class="container">
		<view class="page-section-spacing">
			<scroll-view
				class="scroll-view_H"
				scroll-y="true"
				bindscroll="scroll"
				bindtap="selectItem"
				style="height: 100vh"
			>
			<block wx:for="{{list}}">
				<view class="card-group">
					<scroll-view
						scroll-x="true"
						upper-threshold="30"
						lower-threshold="30"
						data-idx="{{index}}"
						bindscrolltoupper="handleScrollUpper"
						bindscrolltolower="handleScrollLower"
						scroll-into-view="{{toView}}"
						style="width: 710rpx"
					>
					<view class="card-wrapper">
						<view class="group-one" id="image{{index}}">
							<image class="card-img" src="{{item.imagepath}}" mode="aspectFix" />
							<view class="card-info">
								<view class="card-title">{{item.title}}</view>
								<view class="card-time">
									{{item.createtime}}
								</view>
								<view class="card-likenum">
									{{item.zannum}}人已点赞
								</view>
							</view>
						</view>
						<view class="card-operation" id="operation{{index}}">
							<view class="item-one">分享</view>
							<view class="item-two">移除</view>
						</view>
					</view>
					</scroll-view>
					
				</view>
			</block>
			</scroll-view>
		</view>
	</view>
	
</view>