<view class="comment-item" data-idx="{{comment.comment_id}}" data-eid="{{comment.exhibition_id}}" bindtap="handleClickComment">
  <view class="{{pageindex ? 'hr-line-empty': 'hr-line'}}"></view>
  <view class="title-line">
    <image src="{{comment.user_avatar}}" class="c-ava" mode="aspectFit" />
    <view class="name-group">
      <view class="c-name">
        {{comment.user_name}}
        <text style="font-weight: 400;" wx:if="{{comment.exhibition_name}}">评论了展览<text style="font-weight: bold;">「{{comment.exhibition_name}}」</text></text>
        <!-- <text style="font-weight: 400;">评论了<text style="font-weight: bold;">「{{item.exhibition}}」</text></text> -->
      </view>
      <view class="content-star-group">
        <block wx:for="{{[1,2,3,4,5]}}">
          <image wx:if="{{comment.stars >= item}}" src="/static/images/star_yellow.png" mode="aspectFit" class="content-star" />
          <image wx:else src="/static/images/star_gray.png" mode="aspectFit" class="content-star" />
        </block>
      </view>
    </view>
  </view>
  <view class="comment-desc">{{comment.content}}</view>
  <view wx:if="{{comment.labels.length}}" class="impression">印象：
    <block wx:for="{{comment.labels}}">{{(comment.labels.length === index + 1) ? item : item+'·'}}</block>
    </view>
  <view class="{{comment.images.length > 1 ? 'muti-images': 'image-group'}}">
    <block wx:for="{{comment.images}}">
      <image src="{{item}}" data-idx="{{index}}" data-imglist="{{comment.images}}" data-img="{{item}}" data-comment="{{comment}}" class="image-item" mode="{{comment.images.length > 1 ? 'aspectFill': 'widthFix'}}" data-is-catch-event="true" catchtap="handleClickImg" />
    </block>
  </view>
  <view class="info-line">
    <view class="time">{{comment.calTime}} ·{{comment.replied_count}}回复</view>
    <image wx:if="{{comment.liked}}" data-idx="{{comment.comment_id}}" class="info-like" src="/static/images/heart-fill.png" mode="aspectFit" catchtap="handleClickNotLike" />
    <image wx:else data-idx="{{comment.comment_id}}" class="info-notlike" src="/static/images/heart.png" mode="aspectFit" catchtap="handleClickLike" />
    <view class="num">{{comment.liked_count}}</view>

    <view class="del-txt" wx:if="{{comment.user_name===nickname}}" data-idx="{{comment.comment_id}}" catchtap="handleClickDelComment">删除</view>
  </view>
    <!-- <view wx:if="{{ showBigImg }}" class="img-popup">
      <image src="{{bigImg}}" class="full-img" mode="aspectFit"  />
    </view> -->
</view>