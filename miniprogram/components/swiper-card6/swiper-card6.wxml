<view class="swiper-card-six">
	<view class="title-line" wx:if="{{showType === 'jiangjiedaoyu'}}">
		<view class="title-left">
			<view class="title">
				<view class="title-name">讲解导语</view>
				<image class="title-img" src="/static/images/dashline1.png" mode="aspectFix" />
			</view>
			<image class="title-icon small-icon" src="/static/images/dianshi.png" mode="aspectFix" />
		</view>
		<view class="title-right">
			<image class="title-icon" src="/static/images/xunhuan1.png" mode="aspectFix" />
			<image class="title-icon" src="/static/images/xiazai.png" mode="aspectFix" />
		</view>
	</view>
	<view class="title-line-simple" wx:if="{{showType === 'guanjianci'}}">
		<view class="only-title">关键词</view>
		<input 
			wx:if="{{showInput}}"
			class="weui-input" 
			value="{{keyword}}"
			bindinput="handInput"
			bindconfirm="confirmTap"
			placeholder="可搜索展品名称"/>
	</view>
	<view class="container">
		<view class="page-section-spacing">
			<scroll-view
				class="scroll-view_H"
				scroll-y="{{true}}"
				show-scrollbar="{{false}}"
				enhanced="{{true}}"
				bindscroll="scroll"
				bindtap="selectItem"
				style="{{scrollStyle}}"
			>
			<block wx:for="{{list}}">
				<view class="card-group">
					<view class="group-one">
					<image class="card-img" src="{{item.imagepath}}" mode="aspectFix" />
						<view class="card-info">
						<view class="card-title">{{item.title}}</view>
						<view class="card-desc">
							<view class="desc-item">
							<image class="item-icon" src="/static/images/erji.png" mode="aspectFix" />
							{{item.lookcount}}
							</view>
							<view class="desc-item">
							<image class="item-icon" src="/static/images/time-xiao.png" mode="aspectFix" />
							{{item.zannum}}
							</view>
						</view>
						</view>
					</view>
					
					<view class="card-icon">
						<image class="play-icon" src="/static/images/bofangtiao.png" mode="aspectFix" />
					</view>
				</view>
			</block>
			</scroll-view>
		</view>
	</view>
	
</view>