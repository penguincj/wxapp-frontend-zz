<view class="weui-navigation-bar {{extClass}}" style='height: calc(44px + {{statusBarHeight}})'>
  <view class="weui-navigation-bar__inner {{ios ? 'ios' : 'android'}}" style="color: {{color}}; background: {{background}}; {{displayStyle}}; {{innerPaddingRight}}; {{safeAreaTop}};">

    <!-- 左侧按钮 -->
    <view class='weui-navigation-bar__left' style="{{leftWidth}};">
      <block wx:if="{{back}}">
        <!-- 返回上一页 -->
        <block wx:if="{{!isShowHome}}">
          <view class="weui-navigation-bar__buttons weui-navigation-bar__buttons_goback">
            <view
              bindtap="handleBack"
              class="weui-navigation-bar__btn_goback_wrapper"
              hover-class="weui-active"
              hover-stay-time="100"
              aria-role="button"
              aria-label="返回"
            >
              <image wx:if="{{styleType==='light'}}" class="weui-navigation-bar_back-img" src="/static/images/back.png" mode="aspectFill" />
              <image wx:else class="weui-navigation-bar_back-img" src="/static/images/back-dark.png" mode="aspectFill" />
              <!-- <view class="weui-navigation-bar__button weui-navigation-bar__btn_goback"></view> -->
            </view>
          </view>
        </block>
        <!-- 返回首页 -->
        <block wx:if="{{back && isShowHome}}">
          <view class="weui-navigation-bar__buttons weui-navigation-bar__buttons_home">
            <view
              bindtap="handleClickHome"
              class="weui-navigation-bar__btn_home_wrapper"
              hover-class="weui-active"
              aria-role="button"
              aria-label="首页"
            >
              <image wx:if="{{styleType==='light'}}" class="weui-navigation-bar_back-img" src="/static/images/home-white.png" mode="aspectFill" />
              <image wx:else class="weui-navigation-bar_back-img" src="/static/images/home-black.png" mode="aspectFill" />
              
              <!-- <view class="weui-navigation-bar__button weui-navigation-bar__btn_home"></view> -->
            </view>
          </view>
        </block>
      </block>
      <block wx:else>
        <view style="{{innerPaddingTop}}">
          <slot name="left"></slot>
        </view>
      </block>
    </view>

    <!-- 标题 -->
    <view class='weui-navigation-bar__title_left'>
      <view wx:if="{{loading}}" class="weui-navigation-bar__loading" aria-role="alert">
        <view
          class="weui-loading"
          aria-role="img"
          aria-label="加载中"
        ></view>
      </view>
      <block wx:if="{{title}}">
        <text>{{title}}</text>
      </block>
      <block wx:else>
        <slot name="center"></slot>
      </block>
    </view>
    
    <!-- 右侧留空 -->
    <view class='weui-navigation-bar__right'>
      <slot name="right"></slot>
    </view>
  </view>

</view>
