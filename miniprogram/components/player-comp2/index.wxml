<movable-area style="width: 750rpx;height: {{screenHeight - 130}}px">
	<movable-view animation="{{false}}"  class="move-area" x="{{movex}}" y="{{movey}}" direction="all" bindchange="handleChange">
    <image src="/static/images/airobot.png" class="ai-robot" mode="aspectFix"  bindtap="handleClickAiRobot" />
  </movable-view>

  <movable-view wx:if="{{!isNewStyle}}" animation="{{false}}"  class="move-area" x="{{moveplayx}}" y="{{moveplayy}}" direction="all" bindchange="handlePlayIconChange">
    <view wx:if="{{!isNewStyle}}"  class="player-comp" wx:if="{{isShow}}" bindtap="handleClickPlayerComp">
      <image wx:if="{{isPlaying}}" src="/static/images/fuchuang-playing.png" class="img" mode="aspectFill" />
      <image wx:else src="/static/images/fuchuang-pause.png" class="img" mode="aspectFill" />
    </view>
  </movable-view>

  <view wx:else class="player-comp-new">
    111
  </view>

</movable-area>
