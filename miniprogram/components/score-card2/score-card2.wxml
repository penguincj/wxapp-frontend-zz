              <view class="star-group">
                <block wx:for="{{item}}">
                  <image class="gray-star-group" src="/static/images/star_gray.png" mode="aspectFit" />
                </block>
              </view>
              <view class="percent-line">
                <view class="yellow-area" style="width: {{100 * (score.star_distribution[index]/score.comment_count) + '%'}}"></view>
                <view class="gray-area"></view>
              </view>
            </view>
          </view>
          
        </view> -->
        <view class="right-btn">
           <view class="btn-group" bindtap="handleClickCard">
              <image src="/static/images/btn-selected.png" class="loc-btn" mode="aspectFix" />
              <view class="loc-name white">
                <text>写评价</text>
              </view>
            </view>
        </view>
      </view>
