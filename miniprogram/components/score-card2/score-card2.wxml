<view class="scord-card2">
  <view class="card-group">
    <image class="card-bg" src="/static/images/btn2.png" mode="aspectFix" />
    <view class="content-group">
      <view class="top-area">
        <view class="left-group">
          <view class="content-score">
            <text>岛屿用户评分 </text>
            <text>{{score.score_txt}}分</text>
          </view>
          <view class="content-star-num">
            <view class="content-star-group">
            <block wx:for="{{starTemArr}}">
              <image wx:if="{{score.score >= item['item'+index]}}" src="/static/images/star_yellow.png" mode="aspectFit" class="content-star" />
              <image wx:elif="{{(index>0) && (score.score < item['item'+index]) && (score.score >= (starTemArr[index-1]['item'+(index-1)] + item['item'+index])/2)}}" src="/static/images/star_both.png" mode="aspectFit" class="content-star" />
              <image wx:else src="/static/images/star_gray.png" mode="aspectFit" class="content-star" />
            </block>
          </view>
          <text class="score-num" wx:if="{{score.star_users_num > 10}}">{{score.star_users_num}}人评分</text>
          </view>
        </view>
        <!-- <view class="right-group">
          <view wx:for="{{starArr}}">
