<view wx:if="{{list.length}}" class="swiper-card-eight">
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{2000}}" duration="{{500}}" vertical="{{true}}" circular="{{true}}">
      <block wx:for="{{list}}" wx:key="unique">
        <swiper-item>
          <view class="swiper-item">
            <view class="line">“<view class="txt">{{item}}</view>”</view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
 
</view>