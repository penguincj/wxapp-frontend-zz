<view wx:if="{{list.length}}" class="swiper-card-one">
  <view wx:if="{{title}}" class="title-line">
    <view class="title">
      <view class="title-name">{{title}}</view>
      <image class="title-img" src="/static/images/dashline1.png" mode="aspectFix" />
    </view>
    <view class="date-group">
      <view class="date">
        <span class="date-month">{{dateData.month}}</span>
        <span class="date-fenge">/</span>
        <span class="date-day">{{dateData.date}}</span>
      </view>
      <span class="date-week">{{dateData.day_str}}</span>
    </view>
  </view>
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{false}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" bindchange="swiperChange" current="{{swiperCurrent}}">
      <block wx:for="{{list}}" wx:key="{{item.id}}">
        <swiper-item>
          <view class="swiper-item" data-idx="{{item.id}}" bindtap="handleClickItem" >
            <image src="{{item.image_url}}" class="item-img" mode="aspectFill" />
            <view class="mask"></view>
            <view class="exhibition-type">{{item.short ? '临时展':'常设展'}}</view>
            <view class="item-desc-group">
              <view class="desc-title">{{item.name}}</view>
              <view class="desc-desc">{{item.description}}</view>
              <view class="desc-opendate">
                <image src="/static/images/dateicon.png" class="opendate-icon" mode="aspectFill" />
                {{item.opendate}}
              </view>
            </view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="dots-group">
    <block wx:for="{{list}}" wx:key="{{item.id}}">
      <image src="/static/images/dot1{{index === swiperCurrent ? '-active': ''}}.png" class="dot-img" mode="aspectFill" />
    </block>
  </view>
</view>