<view class="scord-card">
  <view class="title-line">
    <view class="title">
      <view class="title-name">岛屿评分</view>
      <image class="title-img" src="/static/images/dashline1.png" mode="aspectFix" />
    </view>
  </view>
  <view class="card-group">
    <image class="card-bg" src="/static/images/btn2.png" mode="aspectFix" />
    <view class="content-group">
      <view class="top-area">
        <view class="left-group">
          <view class="content-score">8.8</view>
          <view class="content-name">推荐指数</view>
          <view class="content-star-group">
            <image src="/static/images/star_yellow.png" mode="aspectFit" class="content-star" />
            <image src="/static/images/star_yellow.png" mode="aspectFit" class="content-star" />
            <image src="/static/images/star_yellow.png" mode="aspectFit" class="content-star" />
            <image src="/static/images/star_both.png" mode="aspectFit" class="content-star" />
            <image src="/static/images/star_gray.png" mode="aspectFit" class="content-star" />
          </view>
        </view>
        <view class="right-group">
          <view wx:for="{{starArr}}">
            <view class="star-line">
              <view class="star-group">
                <block wx:for="{{item}}">
                  <image class="gray-star-group" src="/static/images/star_gray.png" mode="aspectFit" />
                </block>
              </view>
              <view class="percent-line">
                <view class="yellow-area"></view>
                <view class="gray-area"></view>
              </view>
            </view>
          </view>
          
        </view>
      </view>
      <view class="bottom-area">
        <view class="bottom-left">
          <view class="texts">60.2万人看过</view>
          <view class="fenge"></view>
          <view class="texts">50.8万人想看</view>
        </view>
        <view class="bottom-right">
          <view class="texts">182930人评分</view>
        </view>
      </view>
    </view>
  </view>
</view>