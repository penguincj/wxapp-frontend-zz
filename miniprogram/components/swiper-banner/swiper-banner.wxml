<view wx:if="{{list.length}}" class="swiper-banner-compontent">
  <view class="page-section page-section-spacing swiper">
    <swiper indicator-dots="{{false}}" autoplay="{{true}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{list}}" wx:key="id">
        <swiper-item>
          <view class="swiper-item" data-idx="{{item.id}}" data-link="{{item.app_url}}" bindtap="handleClickItem">
            <image src="{{item.image_url}}" class="item-img" mode="aspectFill" />
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- <view wx:if="{{list.length > 10}}" class="find-more" bindtap="handleClickMore">查看更多</view> -->
</view>