<view wx:if="{{list.length}}" class="swiper-banner-compontent">
  <view class="page-section page-section-spacing swiper">
    <swiper 
      circular="{{true}}" 
      indicator-dots="{{false}}" 
      autoplay="{{autoplay}}" 
      interval="{{interval}}" 
      duration="{{duration}}"
      current="{{currentIndex}}"
      bindchange="swiperChange"
      >
      <block wx:for="{{list}}" wx:key="id">
        <swiper-item>
          <view class="swiper-item {{currentIndex === index ? 'active' : ''}}" 
            data-idx="{{item.id}}" 
            data-link="{{item.url}}" 
            data-is-catch-event="{{true}}" 
            data-event-id="index_swiper_e1"
            bindtap="handleClickItem"
          >
            <image src="{{item.img}}" class="item-img" mode="aspectFill" />
            <view wx:if="{{item.type === 'operation'}}" class="img-mask"></view>
            <view wx:if="{{item.title}}" class="title">{{item.title}}</view>
            <view wx:if="{{item.subtitle}}" class="sub-title">{{item.subtitle}}</view>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- <view wx:if="{{list.length > 10}}" class="find-more" bindtap="handleClickMore">查看更多</view> -->
</view>