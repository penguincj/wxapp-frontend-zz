<view class="image-scale-comp" aria-role="dialog" aria-modal="true" aria-hidden="{{!showDialog}}">
  <view wx:if="{{showPupup}}" class="mask {{showPupup ? 'show' : ''}}">
    <movable-area style="width: 100%; height: 100vh;">
      <movable-view
       scale="{{true}}"
       scale-min="1" 
       scale-max="3" 
       direction="all"
       bindscale="onScale" 
       style="width: 100%; height: 100%;">
        <image src="{{image}}" class="full-image" mode="aspectFit" />
      </movable-view>
    </movable-area>
    <image src="/static/images/close-index.png" bindtap="handleClose" class="close-icon" mode="aspectFill" />

  </view>
</view>